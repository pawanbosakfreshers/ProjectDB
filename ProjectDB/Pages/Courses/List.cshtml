@page
@model ProjectDB.Pages.Courses.ListModel
@{
}
<form method="post">

<div class="row">
    <div class="col-sm-7"><h3>Courses</h3></div>
    <div class="col">
        <a href="/Courses/Add" class="btn btn-success" role="button"><i class="fa fa-add">Add</i></a>
    </div>
</div>
<br/>
<div>
    <input type="text" asp-for="@Model.SearchText" class="col-sm-7" />
    <button type="submit" class="btn btn-success"><i class="fa fa-search"></i></button> 

    <i class="fa-li fa fa-check-square"></i>
        <button asp-page-handler="clear" type="clear" class="btn btn-warning"><</button>
</div>

   



<table class="table">
    <thead>
        <tr>
            <th scope="col">Course_id</th>
            <th scope="col">Course_Name</th>
            
            <th scope="col">Actions</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var d in @Model.Courses)
        {
            <tr>
                <td>@d.Course_id</td>
                <td>@d.Course_Name</td>
                
                <td>
                    <a href="/Courses/Edit/@d.Course_id" class="btn btn-warning" role="button">Edit</a>
                    <a href="/Courses/Delete/@d.Course_id" class="btn btn-danger" role="button">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
</form>