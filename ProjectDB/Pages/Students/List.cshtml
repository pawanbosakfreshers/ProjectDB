@page
@model ProjectDB.Pages.Students.ListModel
@{
}
<form method="post">

<div class="row">
    <div class="col-sm-7"><h3>Students</h3></div>
    <div class="col">
        <a href="/Students/Add" class="btn btn-success" role="button"><i class="fa fa-add">Add</i></a>
    </div>
</div>
<br/>
<div>
    <input type="text" asp-for="@Model.SearchText" class="col-sm-7" />
    <button type="submit" class="btn btn-success"><i class="fa fa-search"></i></button> 

    <i class="fa-li fa fa-check-square"></i>
        <button asp-page-handler="clear" type="clear" class="btn btn-warning"><</button>
</div>

   



<table class="table">
    <thead>
        <tr>
            <th scope="col">Student_Id</th>
            <th scope="col">Student_Name</th>
            <th scope="col">Gender</th>
              <th scope="col">MobileNumber</th>
            <th scope="col">Actions</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var d in @Model.Students)
        {
            <tr>
                <td>@d.Student_Id</td>
                <td>@d.Student_Name</td>
                <td>@d.Gender</td>
                 <td>@d.MobileNumber</td>
                <td>
                    <a href="/Students/Edit/@d.Student_Id" class="btn btn-warning" role="button">Edit</a>
                    <a href="/Students/Delete/@d.Student_Id" class="btn btn-danger" role="button">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
</form>